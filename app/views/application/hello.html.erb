<% if session[:name].present? %>
<h1>Hi, <%= session[:name] %>.</h1>
<%= form_tag ({controller: 'sessions', action: 'destroy', method: 'post'}) do %>
  <input type=submit value='logout', action: 'destroy' >
<% end %>

<% else %>

<h1>Please log in.</h1>
<%= form_tag ({controller: 'sessions', action: 'new'}) do %>
  <%= link_to 'login', '/login' %>
<% end %>

<% end %>

